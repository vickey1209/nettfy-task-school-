    <form class="signup-form" action="/edit/<%= details._id %>" id="my_form" method="POST">

        <!-- form body -->
        <div class="form-body">

            <!-- Firstname and Lastname -->
            <div class="horizontal-group">
                <div class="form-group left">
                    <label for="firstname" class="label-title">First name *</label>
                    <input type="text" id="firstname" class="form-input" name="firstname"
                        placeholder="enter your first name" value="<%= details.firstname %>" required="required" />
                </div>
                <div class="form-group right">
                    <label for="lastname" class="label-title">Last name</label>
                    <input type="text" id="lastname" class="form-input" name="lastname" value="<%= details.lastname %>"
                        placeholder="enter your last name" />
                </div>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="email" class="label-title">Email*</label>
                <input type="email" id="email" class="form-input" name="email" placeholder="enter your email" value="<%= details.email %>"
                    required="required">
            </div>

            <div class="form-group" style="display: flex;align-items: center">
                <label for="gender" class="label-title">Gender*</label>
                <input type="radio" style="width: auto;" id="gender" class="form-input" name="gender" value="male"
                    required="required" <%= details.gender=='male'?'checked':'' %> ><span
                    style="padding-left: 10px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size: 18px;">MALE</span>
                <input type="radio" style="width: auto; margin-left: 10px;" id="gender" class="form-input" name="gender" value="female"
                required="required" <%= details.gender=='female'?'checked':'' %> ><span
                    style="padding-left: 10px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size: 18px;">FEMALE</span>
            </div>

            <div class="form-group">
                <label for="phone" class="label-title">Phone*</label>
                <input type="phone" id="phone" class="form-input" name="phone" placeholder="enter your phone" value="<%= details.phone %>"
                    required="required">
            </div>

            <div class="form-group">
                <label for="age" class="label-title">Age*</label>
                <input type="age" id="age" class="form-input" name="age" placeholder="enter your age" value="<%= details.age %>"
                    required="required">
            </div>

            <div class="form-group">
                <label for="file" class="label-title">File*</label>
                <input type="file" id="file" class="form-input" name="file" placeholder="enter your file" />
            </div>
        <!-- <h2><%= details.password %></h2> -->
            <!-- Passwrod and confirm password -->
            <div class="horizontal-group">
                <div class="form-group left">
                    <label for="password" class="label-title">Password *</label>
                    <input type="password" id="password" class="form-input" name="password"
                        placeholder="enter your password">
                        
                </div>
                <div class="form-group right">
                    <label for="confirm-password" class="label-title">Confirm Password *</label>
                    <input type="password" class="form-input" id="confirm-password" name="confirmpassword"
                        placeholder="enter your password again">
                       
                </div>
            </div>

            <div class="form-footer">
                <span>* required</span>
                <button type="submit" class="btn" value="Update" onclick="return submit();">Update</button>
            </div>

    </form>

    <script type="text/javascript">
        $(document).ready(function() {
            $("#my_form").submit(function() {           
                if($("#password").val()=="") {             
                        $("#password").val('<%= details.password %>');         
                                }
            });
         });
    </script>

